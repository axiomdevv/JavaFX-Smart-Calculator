<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>



<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="520" prefWidth="360" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.CalculatorController" stylesheets="@style.css">
    <top>

        <TextField prefHeight="83.0"
                   prefWidth="600.0"
                   BorderPane.alignment="CENTER"
                   fx:id="textField"
                   editable="false"
                   text="0"
                   alignment="CENTER_RIGHT"
        >
            <BorderPane.margin>
                <Insets bottom="12.0"/>
            </BorderPane.margin>
        </TextField>

    </top>

    <center>
      <GridPane alignment="CENTER" BorderPane.alignment="CENTER" hgap="5" vgap="5" fx:id="grid">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>

             <Button mnemonicParsing="false"
                     text="0"
                     onAction="#handleNumber"
                     GridPane.columnIndex="1"
                     GridPane.rowIndex="5"
                     styleClass="number"
             />

             <Button mnemonicParsing="false"
                     text="1"
                     onAction="#handleNumber"
                     GridPane.rowIndex="4"
                     GridPane.columnIndex="0"
                     styleClass="number"
             />

             <Button mnemonicParsing="false"
                     text="2"
                     onAction="#handleNumber"
                     GridPane.columnIndex="1"
                     GridPane.rowIndex="4"
                     styleClass="number"
             />

             <Button mnemonicParsing="false"
                     text="3"
                     onAction="#handleNumber"
                     GridPane.columnIndex="2"
                     GridPane.rowIndex="4"
                     styleClass="number"
             />

             <Button mnemonicParsing="false"
                    text="4"
                     onAction="#handleNumber"
                    GridPane.rowIndex="3"
                     styleClass="number"
            />

            <Button mnemonicParsing="false"
                    text="5"
                    onAction="#handleNumber"
                    GridPane.columnIndex="1"
                    GridPane.rowIndex="3"
                    styleClass="number"
            />

             <Button mnemonicParsing="false"
                     text="6"
                     onAction="#handleNumber"
                     GridPane.columnIndex="2"
                     GridPane.rowIndex="3"
                     styleClass="number"
             />

             <Button mnemonicParsing="false"
                     text="7"
                     onAction="#handleNumber"
                     GridPane.rowIndex="2"
                     styleClass="number"
             />

             <Button mnemonicParsing="false"
                     text="8"
                     onAction="#handleNumber"
                     GridPane.columnIndex="1"
                     GridPane.rowIndex="2"
                     styleClass="number"
             />
             <Button mnemonicParsing="false"
                     text="9"
                     onAction="#handleNumber"
                     GridPane.columnIndex="2"
                     GridPane.rowIndex="2"
                     styleClass="number"
             />


             <Button mnemonicParsing="false"
                     text="+"
                     onAction="#handleOperator"
                     GridPane.columnIndex="3"
                     GridPane.rowIndex="1"
                     styleClass="options"
             />

             <Button mnemonicParsing="false"
                     text="-"
                     onAction="#handleOperator"
                     GridPane.columnIndex="3"
                     GridPane.rowIndex="2"
                     styleClass="options"
             />

             <Button mnemonicParsing="false"
                     text="*"
                     onAction="#handleOperator"
                     GridPane.columnIndex="3"
                     GridPane.rowIndex="3"
                     styleClass="options"
             />

             <Button mnemonicParsing="false"
                     text="/"
                     onAction="#handleOperator"
                     GridPane.columnIndex="3"
                     GridPane.rowIndex="4"
                     styleClass="options"
             />

             <Button mnemonicParsing="false"
                     text="="
                     onAction="#handleEquals"
                     GridPane.columnIndex="3"
                     GridPane.rowIndex="5"
                     styleClass="equal"
             />

             <Button mnemonicParsing="false"
                     onAction="#handleDelete"
                     GridPane.columnIndex="3"
                     styleClass="delete">
                 <graphic>
                     <ImageView fitWidth="25" fitHeight="25">
                         <Image url="@images/backspace.png"/>
                     </ImageView>
                </graphic>
             </Button>

             <Button mnemonicParsing="false"
                     text="C"
                     onAction="#handleErase"
                     GridPane.columnIndex="2"
                     styleClass="delete"
             />

             <Button mnemonicParsing="false"
                     text="."
                     onAction="#handleNumber"
                     textAlignment="CENTER"
                     GridPane.columnIndex="2"
                     GridPane.rowIndex="5"
                     styleClass="number"
             />
             <Button mnemonicParsing="false"
                     text="+/-"
                     onAction="#handleSign"
                     textAlignment="CENTER"
                     GridPane.columnIndex="0"
                     GridPane.rowIndex="5"
                     styleClass="number"
             />
             <Button mnemonicParsing="false"
                     text="√"
                     onAction="#handleSqrt"
                     textAlignment="CENTER"
                     GridPane.columnIndex="2"
                     GridPane.rowIndex="1"
                     styleClass="options"
             />
             <Button mnemonicParsing="false"
                     text="\%"
                     onAction="#handlePercent"
                     textAlignment="CENTER"
                     GridPane.columnIndex="1"
                     GridPane.rowIndex="1"
                     styleClass="options"
             />
             <Button mnemonicParsing="false"
                     text="x²"
                     onAction="#handleSquare"
                     textAlignment="CENTER"
                     GridPane.columnIndex="0"
                     GridPane.rowIndex="1"
                     styleClass="options"
             />

         </children>
      </GridPane>
   </center>

</BorderPane>
